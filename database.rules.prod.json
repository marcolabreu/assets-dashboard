{
  "rules": {
    ".read": "true",
    ".write": "true",
    "funds": {
      "$fund_id": {
        ".indexOn": ".value",
        "subfunds": {
          "$subfund_id": {
            ".indexOn": ".value",
            "share_classes": {
              "$share_class_id": {
                ".indexOn": [".value", "uid"],
                ".validate": "newData.hasChildren(['uid'])",
                "uid": {
                  ".validate": "newData.isString() && data.exists()"
                }
              }
            }
          }
        }
      }
    },
    "reports_by_date": {
      "$date": {
        ".indexOn": ".value",
        "$uid": {
          ".indexOn": ".value",
          "nb_alerts": {
            ".validate": "newData.isNumber()"
          },
          "report_status": {
            ".validate": "newData.isBoolean()"
          }
        }
      }
    }
  }
}
